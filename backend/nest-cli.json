{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.js",
        "outDir": "./dist/src"
      },
      {
        "include": "datasets/assets/**/*",
        "outDir": "./dist/src"
      }
    ],
    "watchAssets": true
  }
}
